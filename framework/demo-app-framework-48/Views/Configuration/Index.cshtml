@model Dictionary<string,List<demo_app_framework_48.Models.ConfigurationModel>>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

    <style>
        body {
            font-family:Roboto,'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        }
        h1 {
            display:block;
            border-bottom: 3px solid;
            border-bottom-color: dimgrey;
            width:80%;
        }
        h2 {
            font-family: Roboto;
        }
        th {
            background-color: black;
            color: white;
            text-align: center;
            vertical-align: middle;
            border-radius:5px;
            padding-top:5px;
            padding-bottom:5px;
            padding-left:5px;
                  /*border-right-color:black;*/
            /*border-right-width:3px;*/
            font-family:Roboto,'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        }
        td {
            font-family: Roboto;
            padding-left:5px;
            padding-right:5px;
            padding-top: 5px;
            padding-bottom: 5px;
            border-style:solid;
            border-color:dimgrey;
            border-width:1px;
            background-color:whitesmoke;
        }
        legend {
            padding-left: 10px;
            padding-right: 10px;
            padding-bottom: 5px;
            padding-top: 5px;
            /*background-color: darkgray;*/
            color: black;
            font-size:larger;
            font-family:Roboto,'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            border-radius:5px;
            border-style:solid;
            border-width:1px;
            border-color:black
        }
        fieldset {
            margin-bottom:20px;
            border-radius:5px;
            border-width:.05em;
            border-style:solid;
            display:inline;
        }
        table {
             border-collapse: collapse;
             margin: 10px;
        }
        .keyClass {
            border-radius:0px;
            border-top-left-radius: 5px;
            border-bottom-left-radius:0px;
            border-bottom-right-radius:0px;
        }
        .valueClass {
            border-radius:0px;
            border-top-right-radius:5px;
            border-right-style:solid;
      padding-right:5px;
        }
    </style>
</head>
<body>
    <h1>Effective Configuration</h1>
    <div> 
@foreach(var key in Model.Keys)
{
    if (Model[key].Count == 0)
    {
        continue;
    }
    <fieldset>
        <legend>@key</legend>
        <table>
            <thead>
                <tr>
                    <th class="keyClass">Key</th>
                    <th class="valueClass">Value</th>
                </tr>
            </thead>
            @foreach (var item in Model[key])
            {
                <tr>
                    <td>@item.Key</td>
                    <td>@item.Value</td>
                </tr>
            }
        </table>
    </fieldset>
    <br/>
}
    </div>
</body>
</html>
